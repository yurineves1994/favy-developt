<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CadastrarProduto</servlet-name>
        <servlet-class>br.senac.sp.servlet.CadastrarProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletBD</servlet-name>
        <servlet-class>br.senac.sp.servlet.ServletBD</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListarProdutos</servlet-name>
        <servlet-class>br.senac.sp.servlet.ListarProdutos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditarProduto</servlet-name>
        <servlet-class>br.senac.sp.servlet.EditarProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>VisualizarProduto</servlet-name>
        <servlet-class>br.senac.sp.servlet.VisualizarProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AtivarProduto</servlet-name>
        <servlet-class>br.senac.sp.servlet.AtivarProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DesativarProduto</servlet-name>
        <servlet-class>br.senac.sp.servlet.DesativarProduto</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CadastrarProduto</servlet-name>
        <url-pattern>/CadastrarProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ServletBD</servlet-name>
        <url-pattern>/ServletBD</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListarProdutos</servlet-name>
        <url-pattern>/ListarProdutos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditarProduto</servlet-name>
        <url-pattern>/EditarProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>VisualizarProduto</servlet-name>
        <url-pattern>/VisualizarProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AtivarProduto</servlet-name>
        <url-pattern>/AtivarProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DesativarProduto</servlet-name>
        <url-pattern>/DesativarProduto</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>tela_cadastro_produto.jsp</welcome-file>
    </welcome-file-list>
</web-app>
